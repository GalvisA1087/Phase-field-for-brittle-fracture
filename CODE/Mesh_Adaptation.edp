func mesh MeshAdaptation(mesh &Thl, real[int] &val1, real[int] &val2){

	// Local FEspace
	// for phase field
	fespace Xhl(Thl, Pk);
	Xhl dl=val2; 
	
	// for displacement
	fespace Vhl(Thl, [Pk,Pk]); 
	Vhl [u1l,u2l];
	u1l[] = val1;	

	// This function can be modified if needed, the user must check the FreeFEM++ users's guide, for the 
	// additional adaptmesh parameters
	Thl = adaptmesh(Thl, [u1l,u2l], dl, err=error, hmax=lmax, iso=tm, verbosity=0,nbvx = mNv);
	return Thl; 

}
